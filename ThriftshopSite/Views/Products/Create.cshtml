            </div>
            <div class="form-group">
                <label asp-for="product.Image" class="control-label"></label>
                <input asp-for="product.Image" class="form-control" />
                <span asp-validation-for="product.Image" class="text-danger"></span>
            </div>
        
            <div class="form-group">
                <label asp-for="product.Shop" class="control-label"></label>
                <select asp-for="product.Shop" asp-items="@(new SelectList(thriftShops))" class="form-control"> </select>
                <span asp-validation-for="product.Shop" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <form asp-action="Createshop">
