@model ThriftshopSite.Models.ProductViewModel

@{

    ViewData["Title"] = "Create";
    Product product = ViewData["Product"] as Product;
   var thriftShops = ViewData["Thrifshop"] as IEnumerable<ThriftShop>;


}



<h1>Create</h1>

<h4>Product</h4>
<hr />
<div class="row">

    @product.Id 
 
    <div class="col-md-4">
        <form asp-action="Createshop">
              <div class="form-group">
                <label class="control-label">Id</label>
                <input name="id" value=@product.Id class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">name</label>
                <input name="name"  class="form-control" />
            </div>
            <div class="form-group">
               <label class="control-label">inventory</label>
                <input name="inventory"  class="form-control" />
            </div>
             <div class="form-group">
               <label class="control-label">price</label>
                <input name="price"  class="form-control" />
            </div>
             <div class="form-group">
               <label class="control-label">description</label>
                <input name="description"  class="form-control" />
            </div>
             <div class="form-group">
               <label class="control-label">Image</label>
                <input name="image"  class="form-control" />
            </div>
             <div class="form-group">
               <label class="control-label">Shop</label>
                <select name="thriftShop" asp-items="@(new SelectList(thriftShops,"Name","Name"))" class="form-control"> </select>
            </div>    
            <div class="form-group">
                <input type="submit" value="Createshop" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

     
<div>
    <a asp-action="Index">Back to List</a>
</div>
    
            <button id="mybutton">alert</button>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
