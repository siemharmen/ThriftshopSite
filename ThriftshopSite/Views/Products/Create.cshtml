                <input name="description"  class="form-control" />
            </div>
             <div class="form-group">
               <label class="control-label">Image</label>
                <input name="image"  class="form-control" />
            </div>
             <div class="form-group">
               <label class="control-label">Shop</label>
                <select name="thriftShop" asp-items="@(new SelectList(thriftShops,"Name","Name"))" class="form-control"> </select>
            </div>    
            <div class="form-group">
                <input type="submit" value="Createshop" class="btn btn-primary" />
            </div>
        </form>
    </div>
